<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rounded_16dp"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle_purple"
        android:padding="12dp"
        android:src="@drawable/ic_onboarding_location"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Cho phép RideGo truy cập vào thông tin vị trí của bạn?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_input_field"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_target_circle"
            app:tint="@color/purple_500"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính xác"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị trí chính xác của thiết bị"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnAllowWhileUsing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_search_bar"
        android:backgroundTint="#F5F5F5"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:text="Trong khi dùng ứng dụng"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/btnAllowOnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_search_bar"
        android:backgroundTint="#F5F5F5"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:text="Chỉ lần này"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/btnDeny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_search_bar"
        android:backgroundTint="#F5F5F5"
        android:gravity="center"
        android:paddingVertical="14dp"
        android:text="Không cho phép"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
</LinearLayout>
</FrameLayout>