<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:navGraph="@navigation/nav_graph"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavContainer"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Trang chủ"
                android:drawableTop="@drawable/ic_onboarding_location"
                android:drawableTint="@color/purple_500"
                android:textColor="@color/purple_500"
                android:textSize="10sp"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hoạt động"
                android:drawableTop="@drawable/ic_onboarding_shield"
                android:drawableTint="@color/text_secondary"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:paddingTop="8dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ưu đãi"
                android:drawableTop="@drawable/ic_google"
                android:drawableTint="@color/text_secondary"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tài khoản"
                android:drawableTop="@drawable/ic_onboarding_shield"
                android:drawableTint="@color/text_secondary"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/fabBooking"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_circle_orange"
            android:padding="16dp"
            android:src="@drawable/ic_car_logo"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt xe"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@+id/fabBooking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-24dp"/> </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>